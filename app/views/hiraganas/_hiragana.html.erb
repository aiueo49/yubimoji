<% @hiraganas.each do |hiragana| %>
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title"><%= hiragana.character%></h2>
      <div class="card-actions justify-end">
        <%= button_to '削除', hiragana_path(hiragana), id: "button-delete-#{hiragana.id}", method: :delete, class: "btn btn-primary" %>       </div>
    </div>
  </div>
<% end %>
